{
  "name": "cooked",
  "version": "1.13.0",
  "description": "Cooked is the absolute best way to create & display recipes with WordPress. SEO optimized (rich snippets), galleries, cooking timers, printable recipes and much more.",
  "main": "index.js",
  "scripts": {
    "build": "ddev exec -d /var/www/html/wp-content/plugins/cooked gulp build",
    "watch": "ddev exec -d /var/www/html/wp-content/plugins/cooked gulp default",
    "start:env": "wp-env start",
    "stop:env": "wp-env stop",
    "destroy:env": "wp-env destroy",
    "bundle": "bun run gulp build && bunx bestzip cooked.zip cooked.php includes/ views/ assets/ languages/ vendor/ templates/"
  },
  "runtimeExecutable": "npm",
  "windows": {
    "runtimeExecutable": "npm.cmd"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/XjSv/Cooked.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/XjSv/Cooked/issues"
  },
  "homepage": "https://github.com/XjSv/Cooked#readme",
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^20.19.33",
    "@wordpress/e2e-test-utils-playwright": "^1.40.0",
    "gulp": "^5.0.1",
    "gulp-clean-css": "^4.3.0",
    "gulp-rename": "^2.1.0",
    "gulp-sass": "^5.1.0",
    "gulp-uglify": "^3.0.2",
    "playwright": "^1.58.2",
    "sass": "^1.97.3",
    "@wordpress/env": "^10.39.0",
    "bestzip": "^2.2.1"
  }
}
